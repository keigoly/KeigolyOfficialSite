---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Entrance">
	<div class="flex flex-col items-center justify-center min-h-[60vh] space-y-8 text-center">
		
        <h1 class="font-display text-5xl md:text-7xl font-bold tracking-[0.2em] text-monolith-text">
			MONOLITH
		</h1>
		
        <p class="text-lg md:text-xl text-monolith-sub font-serif">
			読むこと自体を、儀式化する。
		</p>

        <div class="pt-12">
            <a href="/archives" class="text-monolith-accent hover:opacity-80 transition-opacity border-b border-monolith-accent/50 pb-1">
                Enter the Archive
            </a>
        </div>
	</div>
</BaseLayout>