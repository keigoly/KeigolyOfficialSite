---
// src/pages/en/works/index.astro - Works Page (English)
import BaseLayout from "../../../layouts/BaseLayout.astro";
import SectionTitle from "../../../components/ui/SectionTitle";
import SkillSection from "../../../components/ui/SkillSection";
import ExtensionCard from "../../../components/ui/ExtensionCard";

// Chrome Extensions data (English)
const extensions = [
    {
        name: "Realtime!",
        description:
            "Perfect for live commentary. Displays real-time search in a side panel with auto-refresh and filter features.",
        url: "https://chromewebstore.google.com/detail/%E3%83%AA%E3%82%A2%E3%82%BF%E3%82%A4%EF%BC%81/indeiidgljnaokghbdogclapjjngmnkb",
        iconType: "realtime" as const,
    },
    {
        name: "radiko Scheduler",
        description:
            "Create a schedule for automatic switching and playback. Automates daily radio listening to prevent missed shows.",
        url: "https://chromewebstore.google.com/detail/radiko%E3%81%8B%E3%82%93%E3%81%9F%E3%82%93%E4%BA%88%E7%B4%84%E3%82%B9%E3%82%B1%E3%82%B8%E3%83%A5%E3%83%BC%E3%83%A9%E3%83%BC/nolggejdjkibdokfheilodifknlifipk",
        iconType: "radio" as const,
    },
    {
        name: "GemAvatar",
        description:
            "Customize your Google Gemini user avatar. Set different icons for each Gem.",
        url: "https://chromewebstore.google.com/detail/gemavatar/jpilaleommoebpebjbafdiflmfphkmbc",
        iconType: "avatar" as const,
    },
];
---

<BaseLayout
    title="WORKS"
    description="Skills & Professional Experience"
    lang="en"
>
    <section class="pt-32 pb-16 md:pt-40 md:pb-24">
        <SectionTitle client:visible title="WORKS" />
    </section>

    <!-- Main Work Section -->
    <section class="pb-16 md:pb-20">
        <h2
            class="font-display text-xs tracking-[0.3em] text-kg-accent mb-8 flex items-center gap-4"
        >
            <span class="w-8 h-px bg-kg-accent"></span>
            MAIN WORK
        </h2>

        <SkillSection
            client:visible
            iconImage="/images/paloalto.png"
            category="SYSTEM ENGINEER"
            title="Palo Alto Networks"
            subtitle="5 Years Experience"
            description={[
                "As a System Engineer at Palo Alto Networks, I provide technical support for security solutions.",
                "I handle technical inquiries from customers and perform troubleshooting when critical issues arise. I specialize in technical collaboration and negotiation with vendors, contributing to the resolution of complex problems.",
            ]}
            skills={[
                "Palo Alto Networks",
                "Firewall",
                "Network Security",
                "Troubleshooting",
                "Technical Support",
                "Vendor Communication",
            ]}
        />
    </section>

    <!-- Divider -->
    <div class="flex items-center justify-center py-8">
        <div
            class="w-24 h-px bg-gradient-to-r from-transparent via-kg-border to-transparent"
        >
        </div>
    </div>

    <!-- Side Work Section -->
    <section class="pb-24 md:pb-32">
        <h2
            class="font-display text-xs tracking-[0.3em] text-kg-accent mb-8 flex items-center gap-4"
        >
            <span class="w-8 h-px bg-kg-accent"></span>
            SIDE WORK
        </h2>

        <div
            class="relative p-8 md:p-12 bg-kg-surface border border-kg-border rounded-sm"
        >
            <!-- Header -->
            <div class="flex items-start gap-6 mb-8">
                <div
                    class="flex-shrink-0 w-16 h-16 flex items-center justify-center bg-kg-bg-alt border border-kg-border rounded-sm overflow-hidden"
                >
                    <img
                        src="/images/chrome.png"
                        alt="Chrome"
                        class="w-12 h-12 object-contain"
                    />
                </div>
                <div>
                    <span
                        class="inline-block font-display text-xs tracking-[0.2em] text-kg-accent mb-2"
                    >
                        CHROME EXTENSION DEVELOPER
                    </span>
                    <h3 class="font-serif text-2xl md:text-3xl text-kg-text">
                        3 Extensions Published
                    </h3>
                    <p
                        class="mt-2 font-serif text-kg-text-muted leading-relaxed"
                    >
                        I develop Chrome extensions as a side project. I create
                        and publish extensions aimed at improving user
                        productivity and enhancing the browsing experience.
                    </p>
                </div>
            </div>

            <!-- Skills -->
            <div class="flex flex-wrap gap-2 mb-8">
                {
                    [
                        "TypeScript",
                        "Chrome Extensions API",
                        "React",
                        "Web Development",
                        "JavaScript",
                    ].map((skill) => (
                        <span class="px-3 py-1 text-xs font-display tracking-wider bg-kg-bg-alt border border-kg-border text-kg-text-muted rounded-sm">
                            {skill}
                        </span>
                    ))
                }
            </div>

            <!-- Extensions List -->
            <div class="space-y-4">
                <h4
                    class="font-display text-xs tracking-[0.2em] text-kg-text-muted mb-4"
                >
                    PUBLISHED EXTENSIONS
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    {
                        extensions.map((ext, index) => (
                            <ExtensionCard
                                client:visible
                                name={ext.name}
                                description={ext.description}
                                url={ext.url}
                                iconType={ext.iconType}
                                delay={0.1 + index * 0.1}
                            />
                        ))
                    }
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
