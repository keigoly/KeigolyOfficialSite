---
// src/layouts/PostLayout.astro
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
	post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<BaseLayout title={post.data.title} description={post.data.description}>
	<article class="prose prose-invert prose-lg max-w-none mx-auto">
		<header class="mb-12 text-center">
			<div class="text-monolith-accent font-display tracking-widest text-sm mb-4">
				{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
			</div>
			<h1 class="font-serif text-3xl md:text-5xl font-bold leading-tight mb-6">
				{post.data.title}
			</h1>
            {post.data.tags && (
                <div class="flex gap-2 justify-center text-xs text-monolith-sub">
                    {post.data.tags.map(tag => <span>#{tag}</span>)}
                </div>
            )}
		</header>

        <div class="markdown-body font-serif leading-loose tracking-wide text-monolith-text/90">
            <slot />
        </div>
	</article>
</BaseLayout>